<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/machineNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:text="Screwdriver"
        android:textColor="#BC000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/endBookingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="28dp"
        android:alpha="0.85"
        android:includeFontPadding="false"
        android:text="04 July 2020"
        android:textColor="@color/cardview_dark_background"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/activityRequestGuideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineNameTextView" />

    <Button
        android:id="@+id/endBookingButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/end_booking_rounded_white"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="End Booking"
        android:textAllCaps="false"
        android:textColor="#333232"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activityRequestGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/traslucentImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/activityRequestGuideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blankimg" />

    <TextView
        android:id="@+id/sendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:elevation="9dp"
        android:text="Request Send...."
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/activityRequestGuideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>